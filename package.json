{
    "name": "hifumi-js",
    "version": "1.0.0",
    "type": "module",
    "dependencies": {
        "@planetscale/database": "^1.8.0",
        "bufferutil": "^4.0.7",
        "canvas": "^2.11.2",
        "dedent": "^1.0.1",
        "discord.js": "^14.11.0",
        "dotenv": "^16.3.1",
        "drizzle-orm": "^0.27.1",
        "drizzle-zod": "^0.4.4",
        "fuse.js": "^6.6.2",
        "lint-staged": "^13.2.3",
        "mathjs": "^11.8.2",
        "node-fetch": "^3.3.1",
        "path": "^0.12.7",
        "qrcode": "^1.5.3",
        "snoowrap": "^1.23.0",
        "strftime": "^0.10.2",
        "utf-8-validate": "5.0.10",
        "zod": "^3.21.4",
        "zod-validation-error": "^1.3.1"
    },
    "devDependencies": {
        "@types/dedent": "^0.7.0",
        "@types/node": "^18.16.19",
        "@types/qrcode": "^1.5.1",
        "@types/strftime": "^0.9.4",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "drizzle-kit": "^0.19.3",
        "eslint": "^8.44.0",
        "husky": "^8.0.3",
        "prettier": "^3.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "scripts": {
        "start": "tsc && pm2 start ./dist/app.js --name hifumi --time",
        "stop": "pm2 delete hifumi",
        "restart": "tsc && pm2 reload hifumi",
        "prettier": "prettier --config .prettierrc --check .",
        "test:lint": "eslint . -c .eslintrc --max-warnings 0",
        "test:build": "tsc",
        "prepare": "husky install",
        "deploy": "tsc && node ./dist/deploy-commands.js",
        "db:push": "drizzle-kit push:mysql --config ./src/db/drizzle.config.ts",
        "deploy-dev": "tsc && node ./dist/deploy-commands.js --guild 655484563077988385",
        "clear-test-commands": "tsc && node ./dist/deploy-commands.js --guild 655484563077988385 --clear"
    },
    "lint-staged": {
        "*.{js,ts,json,css,md,yml}": "prettier --config .prettierrc --write"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pnpm lint-staged --no-stash",
            "pre-push": "pnpm run /^test:/"
        }
    }
}

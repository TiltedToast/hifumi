{
    "name": "hifumi-js",
    "version": "1.0.0",
    "type": "module",
    "dependencies": {
        "@planetscale/database": "^1.11.0",
        "bufferutil": "^4.0.8",
        "dedent": "^1.5.1",
        "discord.js": "^14.14.1",
        "dotenv": "^16.3.1",
        "drizzle-orm": "^0.29.1",
        "drizzle-zod": "^0.5.1",
        "fuse.js": "^7.0.0",
        "mathjs": "^12.2.0",
        "path": "^0.12.7",
        "qrcode": "^1.5.3",
        "sharp": "^0.33.0",
        "snoowrap": "^1.23.0",
        "strftime": "^0.10.2",
        "table": "^6.8.1",
        "utf-8-validate": "5.0.10",
        "zod": "^3.22.4",
        "zod-validation-error": "^2.1.0"
    },
    "devDependencies": {
        "@biomejs/biome": "1.4.1",
        "@types/dedent": "^0.7.2",
        "@types/node": "^20.10.4",
        "@types/qrcode": "^1.5.5",
        "@types/strftime": "^0.9.8",
        "drizzle-kit": "^0.20.6",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "tsx": "^4.6.2",
        "typescript": "^5.3.3"
    },
    "scripts": {
        "start": "tsc && pm2 start ./pm2.config.cjs",
        "stop": "pm2 delete ./pm2.config.cjs",
        "restart": "tsc && pm2 reload ./pm2.config.cjs",
        "fmt:write": "biome format . --write",
        "test": "pnpm run /^test:/",
        "test:lint": "biome check .",
        "test:build": "tsc",
        "prepare": "husky install",
        "deploy": "tsc && node ./dist/deploy-commands.js",
        "db:push": "drizzle-kit push:mysql --config ./src/db/drizzle.config.ts",
        "deploy-dev": "tsc && node ./dist/deploy-commands.js --guild 655484563077988385",
        "clear-test-commands": "tsc && node ./dist/deploy-commands.js --guild 655484563077988385 --clear"
    },
    "lint-staged": {
        "*.{js,ts,json}": "biome format --write"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pnpm lint-staged --no-stash",
            "pre-push": "pnpm run /^test:/"
        }
    }
}

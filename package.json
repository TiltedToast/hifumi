    "version": "1.0.0",
    "type": "module",
    "dependencies": {
        "bufferutil": "^4.0.7",
        "canvas": "^2.10.2",
        "discord.js": "^14.6.0",
        "dotenv": "^16.0.3",
        "erlpack": "github:discord/erlpack",
        "formdata-node": "^4.4.1",
        "mathjs": "^11.3.3",
        "mongodb": "^4.11.0",
        "node-fetch": "^3.2.10",
        "path": "^0.12.7",
        "qrcode": "^1.5.1",

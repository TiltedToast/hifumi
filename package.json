{
    "name": "hifumi-js",
    "version": "1.0.0",
    "type": "module",
    "dependencies": {
        "@planetscale/database": "^1.11.0",
        "bufferutil": "^4.0.8",
        "dedent": "^1.5.1",
        "discord.js": "^14.13.0",
        "dotenv": "^16.3.1",
        "drizzle-orm": "^0.28.6",
        "drizzle-zod": "^0.5.1",
        "fuse.js": "^7.0.0",
        "mathjs": "^12.0.0",
        "path": "^0.12.7",
        "qrcode": "^1.5.3",
        "sharp": "^0.32.6",
        "snoowrap": "^1.23.0",
        "strftime": "^0.10.2",
        "table": "^6.8.1",
        "utf-8-validate": "5.0.10",
        "zod": "^3.22.4",
        "zod-validation-error": "^2.1.0"
    },
    "devDependencies": {
        "@types/dedent": "^0.7.2",
        "@types/node": "^20.9.0",
        "@types/qrcode": "^1.5.5",
        "@types/strftime": "^0.9.7",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "drizzle-kit": "^0.19.13",
        "eslint": "^8.53.0",
        "eslint-plugin-import": "^2.29.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.0.2",
        "prettier": "^3.0.3",
        "tsx": "^3.14.0",
        "typescript": "^5.2.2"
    },
    "scripts": {
        "start": "tsc && pm2 start ./dist/app.js --name hifumi --time",
        "stop": "pm2 delete hifumi",
        "restart": "tsc && pm2 reload hifumi",
        "fmt:check": "prettier --config .prettierrc --check .",
        "fmt:write": "prettier --config .prettierrc --write .",
        "test": "pnpm run /^test:/",
        "test:lint": "eslint . -c .eslintrc --max-warnings 0",
        "test:build": "tsc",
        "prepare": "husky install",
        "deploy": "tsc && node ./dist/deploy-commands.js",
        "db:push": "drizzle-kit push:mysql --config ./src/db/drizzle.config.ts",
        "deploy-dev": "tsc && node ./dist/deploy-commands.js --guild 655484563077988385",
        "clear-test-commands": "tsc && node ./dist/deploy-commands.js --guild 655484563077988385 --clear"
    },
    "lint-staged": {
        "*.{js,ts,json,css,md,yml}": "prettier --config .prettierrc --write"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pnpm lint-staged --no-stash",
            "pre-push": "pnpm run /^test:/"
        }
    }
}

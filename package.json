        "zod": "^3.22.4",
        "zod-validation-error": "3.0.0"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/dedent": "^0.7.2",
        "@types/gifsicle": "^5.2.2",
        "@types/qrcode": "^1.5.5",
        "@types/strftime": "^0.9.8",
        "@typescript-eslint/eslint-plugin": "^6.20.0",
        "@typescript-eslint/parser": "^6.20.0",
        "concurrently": "^8.2.2",

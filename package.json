        "@types/request": "^2.48.8",
        "@types/strftime": "^0.9.4",
        "@typescript-eslint/eslint-plugin": "^5.42.1",
        "@typescript-eslint/parser": "^5.42.1",
        "eslint": "^8.27.0",
        "eslint-cli": "^1.1.1",
        "husky": "^8.0.2",

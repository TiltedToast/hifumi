        "docker-build": "tsc && node ./dist/app.js",
        "lint": "eslint ./src",
        "prettier": "prettier --config .prettierrc --write .",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,ts}": "eslint --cache",
        "*.{js,ts,json,css,md}": "prettier --config .prettierrc --write"

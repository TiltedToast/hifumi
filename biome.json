{
    "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noExtraBooleanCast": "warn",
                "noForEach": "warn",
                "useFlatMap": "warn",
                "useSimplifiedLogicExpression": "warn",
                "useLiteralKeys": "off"
            },
            "correctness": {
                "noConstAssign": "error",
                "recommended": true
            },
            "nursery": {
                "recommended": true
            },
            "performance": {
                "recommended": true
            },
            "style": {
                "recommended": true,
                "noNonNullAssertion": "off",
                "noParameterAssign": "off"
            },
            "suspicious": {
                "recommended": true,
                "noEmptyInterface": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentWidth": 4,
        "lineWidth": 100,
        "formatWithErrors": true,
        "indentStyle": "space"
    },
    "files": {
        "ignore": ["dist", "node_modules", ".vscode", ".husky"],
        "ignoreUnknown": true
    },
    "javascript": {
        "formatter": {
            "lineEnding": "lf",
            "indentWidth": 4,
            "semicolons": "always",
            "trailingComma": "es5"
        }
    },
    "json": {
        "formatter": {
            "lineWidth": 100,
            "enabled": true,
            "indentStyle": "space",
            "lineEnding": "lf",
            "indentWidth": 4
        }
    }
}
